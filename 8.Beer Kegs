using System;
using System.Linq;
using System.Collections.Generic;

namespace Data_Types_and_Basic_Syntax___Exercise
{
    class Program
    {
        static void Main(string[] args)
        {
            //8.Beer Kegs

            int numberOfLines = int.Parse(Console.ReadLine());

            string bestModel = String.Empty;
            double bestVolume = 0.0;

            for (int i = 0; i < numberOfLines; i++)
            {
                string currentModel = Console.ReadLine();
                double currentRadius = double.Parse(Console.ReadLine());
                double currentHeight = double.Parse(Console.ReadLine());

                double currentVolume = Math.PI * Math.Pow(currentRadius, 2) * currentHeight;

                if (currentVolume > bestVolume)
                {
                    bestModel = currentModel;
                    bestVolume = currentVolume;
                }
            }

            Console.WriteLine(bestModel);

        }
    }
}
